{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": "error",
    "semi": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "curly": "error",
    "no-console": "warn"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "mocha": true
      }
    },
    {
      "files": ["cypress/**/*.js"],
      "env": {
        "cypress": true
      }
    }
  ]
}
